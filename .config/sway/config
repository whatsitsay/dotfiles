exec_always autotiling
exec_always nm-applet

#exec /usr/lib/xfce-polkit/xfce-polkit

#
# Wireplumber - needed these in Void Linux:
#
exec /usr/bin/pipewire
exec /usr/bin/wireplumber
exec pipewire-pulse



#
# Notifications:
#
exec mako -c $HOME/.config/mako/config

#
# Idle/Screen Timout:
#

exec_always swayidle -w \
	timeout 600 '${lock}' \
        timeout 900 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
	before-sleep '${lock}' \
	lock '${lock}'

# Lid close lock
bindswitch --reload --locked lid:on exec $lock

#
# Paste:
#
exec wl-paste -t text --watch clipman store --no-persist
exec wl-paste -p -t text --watch clipman store -P --histpath="˜/.local/share/clipman-primary.json"

exec udiskie &

# Gestures
bindgesture swipe:3:right workspace prev
bindgesture swipe:3:left workspace next
bindgesture swipe:3:up exec $menu

# SwayOSD
exec_always swayosd-server &
# Sink volume raise optionally with --device
bindsym XF86AudioRaiseVolume exec swayosd-client --output-volume +5 --device @DEFAULT_SINK@
# Sink volume lower optionally with --device
bindsym XF86AudioLowerVolume exec  swayosd-client --output-volume -5 --device @DEFAULT_SINK@
# Sink volume toggle mute
bindsym XF86AudioMute exec swayosd-client --output-volume mute-toggle

# Capslock (If you don't want to use the backend)
bindsym --release Caps_Lock exec swayosd-client --caps-lock

# Brightness raise
bindsym XF86MonBrightnessUp exec swayosd-client --brightness +5
# Brightness lower
bindsym XF86MonBrightnessDown exec swayosd-client --brightness -5

